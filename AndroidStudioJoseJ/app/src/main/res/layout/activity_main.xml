<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.institutoserpis.androidstudiojosej.MainActivity">

    <TextView
        android:id="@+id/txtTemperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="278dp"
        android:text="Conversor de temperatura:"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.417" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="375dp"
        android:layout_height="41dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="137dp" />

    <TextView
        android:id="@+id/txtRecTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,0ºC"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="212dp" />

    <Button
        android:id="@+id/btnConverter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="327dp" />

    <TextView
        android:id="@+id/txtFarenheit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,0ºF"
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="450dp" />

    <TextView
        android:id="@+id/txtKelvin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,0ºK"
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="450dp" />

</android.support.constraint.ConstraintLayout>
